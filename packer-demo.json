{
  "builders": [{
    "type": "amazon-ebs",
    "region": "ap-northeast-2",
    "source_ami": "ami-0dc44556af6f78a7b",
    "instance_type": "t2.micro",
    "ssh_username": "ubuntu",
    "ami_name": "packer-nodejs-demo {{timestamp}}"
  }],
  "provisioners": [
  {
    "type": "file",
    "source": "app",
    "destination": "/tmp/app"
  },
  {
    "type": "shell",
    "scripts": [  "scripts/deploy.sh"   ],
    "execute_command": "{{ .Vars }} sudo -E sh '{{ .Path }}'",
    "pause_before": "10s"
  }]
}
